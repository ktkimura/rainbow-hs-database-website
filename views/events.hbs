<h2>Events</h2>
<table id = "events-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        {{!-- NOTE: attributes of 'this' need to match however they are aliased in the SELECT statement in app.js. Have to put them in [] since there are spaces --}}
        <tr data-value={{this.[Event ID]}}>
            <td>{{this.[Event ID]}}</td>
            <td>{{this.[Event Name]}}</td>
            <td>{{dateFormat this.[Event Date] "MM/DD/YYYY"}}</td>
            <td><button onclick="deleteEvent({{this.[Event ID]}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>


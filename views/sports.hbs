{{!-- Form to add a record to the table --}}
<h2>Add a new sport</h2>
<p>To add a new sport, please enter the information below and click 'Submit'!</p>
<form id="add-sport-form-ajax">
    <label for="input-sport-type">Sport Name: </label>
    <input type="text" name="input-sport-type" id="input-sport-type">

    <label for="input-season">Season: </label>
    <select name="input-season" id="input-season">
        <option value="" selected disabled>Select a season</option>
        <option value="Fall">Fall</option>
        <option value="Winter">Winter</option>
        <option value="Spring">Spring</option>
    </select>

    <label for="input-varsity-level">Varsity Level: </label>
    <select name="input-varsity-level" id="input-varsity-level">
        <option value="" selected disabled>Select a varsity level</option>
        <option value="Varsity">Varsity</option>
        <option value="Junior Varsity">Junior Varsity</option>
        <option value="Intramural">Intramural</option>
    </select>

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_sport.js"></script>
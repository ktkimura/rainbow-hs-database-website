{{!-- Form to add a record to the table --}}
<h2>Add a new Graduating Class</h2>
<p>To add a new graduating class, please enter their information below and click 'Submit'!</p>
<form id="add-grad-class-form-ajax">
    <label for="input-grad-class">Graduating Year: </label>
    <input type="text" name="input-grad-class" id="input-grad-class">

    <label for="input-page-start">Starting Page: </label>
    <input type="text" name="input-page-start" id="input-page-start">

    <label for="input-page-end">Ending Page: </label>
    <input type="number" name="input-page-end" id="input-page-end">

    <input type="submit">
</form>

